<h1>Eat that burger!</h1>


<h2>READY!</h2>
<ul>
  {{#each burgers}}
    {{#unless eaten}}
      <p>{{ id }}. {{ name }}</p>
    {{/unless}}
  {{/each}}
</ul>


<h2>EATEN!</h2>
<ul>
  {{#each burgers}}
    {{#if eaten}}
      <p>{{ id }}. {{ name }}</p>
    {{/if}}
  {{/each}}
</ul>







<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
