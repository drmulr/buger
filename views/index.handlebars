<container>
  <img src="assets/images/burger.jpg" alt="burger">
  <h1>Eat that burger!</h1>


  <div class="row">


    <div class="col-sm-6">
      <div id="toEat">
        <h2>Ready to Eat!</h2>
        <ul>
          {{#each burgers}} {{#unless eaten}}
          <p>{{ id }}. {{ name }}</p>
          <button class="change-eaten" data-id="{{id}}" data-neweaten="{{eaten}}">
		    {{#if eaten}}{{else}}EAT!{{/if}}
	    </button> {{/unless}} {{/each}}
        </ul>
      </div>
    </div>




    <div class="col-sm-6">
      <div id="eaten">
        <h2>Eaten!</h2>
        <ul>
          {{#each burgers}} {{#if eaten}}
          <p>{{ id }}. {{ name }}</p>
          {{/if}} {{/each}}
        </ul>
      </div>
    </div>



  </div>



  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

</container>